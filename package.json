{
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.14.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-watch": "^7.0.0",
    "husky": "^4.3.5",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "per-env": "^1.0.2",
    "prettier": "^2.2.1"
  },
  "engines": {
    "node": "^12"
  },
  "private": true,
  "scripts": {
    "bootstrap": "npx lerna bootstrap",
    "build:client": "lerna run --stream --scope @wtf/client start",
    "build:server": "vercel dev --listen 3001",
    "format": "concurrently --kill-others npm:format:root npm:format:client npm:format:server",
    "format:client": "lerna run --stream --scope @wtf/client format",
    "format:root": "prettier --write '*.(json)'",
    "format:root:comment": "https://github.com/prettier/prettier/issues/8233#issuecomment-698884492",
    "format:server": "lerna run --stream --scope @wtf/server format",
    "lint": "concurrently --kill-others npm:lint:root npm:lint:client npm:lint:server",
    "lint:client": "lerna run --stream --scope @wtf/client lint",
    "lint:production": "esw '*.js' --color --fix",
    "lint:root": "esw '*.js' --color --fix --watch",
    "lint:server": "lerna run --stream --scope @wtf/server lint",
    "precommit": "lint-staged",
    "start": "per-env",
    "start:development": "concurrently --kill-others npm:build:client npm:build:server",
    "start:production": "npm run build:client && npm run build:server",
    "test": "concurrently --kill-others npm:test:client npm:test:server",
    "test:client": "lerna run --stream --scope @wtf/client test",
    "test:server": "lerna run --stream --scope @wtf/server test"
  }
}
